#include <stdio.h>

int main() {
    char str[300];
    int i = 0, start = 0, end = 0;

    printf("Enter a sentence: ");
    gets(str);

    while (str[i] != '\0') {

        if (str[i] != ' ') {
            start = i;

            while (str[i] != ' ' && str[i] != '\0')
                i++;
            
            end = i - 1;

            while (start < end) {
                char temp = str[start];
                str[start] = str[end];
                str[end] = temp;
                start++;
                end--;
            }
        } 
        else {
            i++;
        }
    }

    printf("Sentence after reversing each word: %s\n", str);

    return 0;
}
