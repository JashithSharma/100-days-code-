#include <stdio.h>

int main() {
    FILE *fp;
    char line[300];

    fp = fopen("info.txt", "a");

    if(fp == NULL) {
        printf("Error: Could not open file.\n");
        return 0;
    }

    printf("Enter a line to append: ");
    getchar(); 
    gets(line);

    fprintf(fp, "%s\n", line);

    fclose(fp);

    printf("Text appended successfully.\n");

    return 0;
}
