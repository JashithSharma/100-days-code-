#include <stdio.h>

int main() {
    int n, i;
    int bin[32];

    printf("Enter a number: ");
    scanf("%d", &n);

    i = 0;
    while(n > 0) {
        bin[i] = n % 2;
        n = n / 2;
        i++;
    }

    printf("Binary: ");
    for(i = i - 1; i >= 0; i--) {
        printf("%d", bin[i]);
    }
    printf("\n");

    return 0;
}
