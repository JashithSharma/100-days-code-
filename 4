#include <stdio.h>

int main() {
    float r;
    float area, circumference;
    float pi = 3.14;

    printf("Enter radius of the circle: ");
    scanf("%f", &r);

    area = pi * r * r;
    circumference = 2 * pi * r;

    printf("Area = %.2f\n", area);
    printf("Circumference = %.2f\n", circumference);

    return 0;
}
