#include <stdio.h>

int main() {
    int n, i;
    int arr[200];
    int totalSum = 0, leftSum = 0, rightSum = 0;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        totalSum += arr[i];
    }

    for(i = 0; i < n; i++) {
        rightSum = totalSum - leftSum - arr[i];

        if(leftSum == rightSum) {
            printf("%d\n", i);
            return 0;
        }

        leftSum += arr[i];
    }

    printf("-1\n");
    return 0;
}
