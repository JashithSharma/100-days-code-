#include <stdio.h>

int main() {
    FILE *in, *out;
    int ch;

    in = fopen("input.txt", "r");
    if(in == NULL) {
        printf("Error: Could not open input.txt\n");
        return 0;
    }

    out = fopen("output.txt", "w");
    if(out == NULL) {
        printf("Error: Could not open output.txt\n");
        fclose(in);
        return 0;
    }

    while((ch = fgetc(in)) != EOF) {
        if(ch >= 'a' && ch <= 'z') {
            ch = ch - 32;
        }
        fputc(ch, out);
    }

    fclose(in);
    fclose(out);

    printf("Conversion complete. Output written to output.txt\n");

    return 0;
}
