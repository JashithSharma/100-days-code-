#include <stdio.h>

int main() {
    int n, x;
    int totalSum;

    printf("Enter a positive integer n: ");
    scanf("%d", &n);

    totalSum = n * (n + 1) / 2;

    for(x = 1; x <= n; x++) {
        int leftSum = x * (x + 1) / 2;
        int rightSum = totalSum - (x - 1) * x / 2;

        if(leftSum == rightSum) {
            printf("%d\n", x);
            return 0;
        }
    }

    printf("-1\n");
    return 0;
}
