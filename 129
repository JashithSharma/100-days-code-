#include <stdio.h>

int main() {
    FILE *fp;
    int num;
    int sum = 0, count = 0;

    fp = fopen("numbers.txt", "r");

    if(fp == NULL) {
        printf("Error: Could not open numbers.txt\n");
        return 0;
    }

    while(fscanf(fp, "%d", &num) == 1) {
        sum += num;
        count++;
    }

    fclose(fp);

    if(count == 0) {
        printf("No numbers found in the file.\n");
    } else {
        printf("Sum: %d\n", sum);
        printf("Average: %.2f\n", (float)sum / count);
    }

    return 0;
}
