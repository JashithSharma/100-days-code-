#include <stdio.h>

int main() {
    int n, k, i;
    int arr[200];
    int windowSum = 0, maxSum;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter k: ");
    scanf("%d", &k);

    if(k > n || k <= 0) {
        printf("-1\n");
        return 0;
    }

    windowSum = 0;
    for(i = 0; i < k; i++) {
        windowSum += arr[i];
    }
    maxSum = windowSum;

    for(i = k; i < n; i++) {
        windowSum = windowSum - arr[i - k] + arr[i];
        if(windowSum > maxSum) {
            maxSum = windowSum;
        }
    }

    printf("Maximum sum of subarrays of size %d = %d\n", k, maxSum);

    return 0;
}
