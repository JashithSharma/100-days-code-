#include <stdio.h>

int main() {
    char str1[200], str2[200];
    int len1 = 0, len2 = 0;
    int i, j, k, isRotation = 0;

    printf("Enter first string: ");
    gets(str1);

    printf("Enter second string: ");
    gets(str2);

    while(str1[len1] != '\0') {
        len1++;
    }

    while(str2[len2] != '\0') {
        len2++;
    }

    if(len1 != len2) {
        printf("Not a rotation\n");
        return 0;
    }

    for(i = 0; i < len1; i++) {
        j = 0;
        k = i;
        while(j < len1 && str1[k] == str2[j]) {
            j++;
            k = (k + 1) % len1;
        }
        if(j == len1) {
            isRotation = 1;
            break;
        }
    }

    if(isRotation == 1)
        printf("It IS a rotation\n");
    else
        printf("NOT a rotation\n");

    return 0;
}
