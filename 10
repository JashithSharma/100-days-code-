#include <stdio.h>

int main() {
    int total, hours, minutes, seconds;

    printf("Enter time in seconds: ");
    scanf("%d", &total);

    hours = total / 3600;
    total = total % 3600;

    minutes = total / 60;
    seconds = total % 60;

    printf("Time = %d:%d:%d\n", hours, minutes, seconds);

    return 0;
}
