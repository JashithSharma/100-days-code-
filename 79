#include <stdio.h>

int main() {
    int r, c, i, j, start;
    int a[50][50];

    printf("Enter number of rows: ");
    scanf("%d", &r);

    printf("Enter number of columns: ");
    scanf("%d", &c);

    printf("Enter matrix elements:\n");
    for(i = 0; i < r; i++) {
        for(j = 0; j < c; j++) {
            scanf("%d", &a[i][j]);
        }
    }

    for(start = 0; start < r; start++) {
        i = start;
        j = 0;
        while(i >= 0 && j < c) {
            printf("%d ", a[i][j]);
            i--;
            j++;
        }
        printf("\n");
    }

    for(start = 1; start < c; start++) {
        i = r - 1;
        j = start;
        while(i >= 0 && j < c) {
            printf("%d ", a[i][j]);
            i--;
            j++;
        }
        printf("\n");
    }

    return 0;
}
