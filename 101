#include <stdio.h>

int main() {
    int n, target, i;
    int nums[200];
    int first = -1, last = -1;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d sorted elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &nums[i]);
    }

    printf("Enter target: ");
    scanf("%d", &target);

    for(i = 0; i < n; i++) {
        if(nums[i] == target) {
            first = i;
            break;
        }
    }

    for(i = n - 1; i >= 0; i--) {
        if(nums[i] == target) {
            last = i;
            break;
        }
    }

    printf("First occurrence index = %d\n", first);
    printf("Last occurrence index = %d\n", last);

    return 0;
}
