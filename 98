#include <stdio.h>

int main() {
    char str[200];
    int i = 0, lastSpace = -1;

    printf("Enter full name: ");
    gets(str);

    while(str[i] != '\0') {
        if(str[i] == ' ')
            lastSpace = i;
        i++;
    }

    i = 0;
    if(str[0] != ' ' && str[0] != '\0')
        printf("%c. ", str[0]);

    while(i < lastSpace) {
        if(str[i] == ' ' && str[i+1] != ' ' && str[i+1] != '\0') {
            printf("%c. ", str[i+1]);
        }
        i++;
    }

    printf("%s\n", &str[lastSpace + 1]);

    return 0;
}
